function drawIfHighest(prev, cur, binaryImage)

     % Clean binary image
     binaryImage = bwmorph(binaryImage, 'clean');
     
     % Label objects in binary image
     labeled = bwlabel(binaryImage, 4);
     
     % Get the centres of labeled object
     s  = regionprops(labeled, 'boundingbox');
     
     hold on;
     for k = 1 : length(s)
        thisBB = s(k).BoundingBox;
        rectangle('Position', [thisBB(1),thisBB(2),thisBB(3),thisBB(4)], 'EdgeColor','b','LineWidth', 1);
        if prev(2) <= cur(2)
            line([cur(1), cur(1) + 100],[, cur(2)],'Color',[1 0 0],'LineWidth',1);
     end
     hold off;
     
     if  prev(2) <= cur(2)
         line([cur(1), cur(1) + 100],[cur(2), cur(2)],'Color',[1 0 0],'LineWidth',1);
     end
     
     